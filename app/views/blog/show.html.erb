  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <% if flash[:notice] %>
              <div class="notice"><%= flash[:notice] %></div>
            <% end %>
              <div class="row">
                <div class="col-sm-2">
                  <%= link_to "EDIT BLOG",edit_blog_path, class: "btn btn-secondary" %>
                </div>
                <div class="col-sm-8">
                  <%= image_tag @blog.image_url.to_s %>
                </div>
                <div class="col-sm-2">
                  <td><%= button_to 'Destroy', @blog, class: "btn btn-secondary", :confirm => 'Are you sure?',
                                                   :method => :delete %></td>
                </div>
              </div>
            <h2 class="section-heading"><%= @blog.title%></h2>
            <p><%= @blog.body%></p>
            <strong>Comment:</strong>
            <% @blog.comments.each do |cmt| %>
              <p><b><%= cmt.commenter%> </b>: <%= cmt.body%></p>
              <p><%= button_to 'Destroy', blog_comment_path(@blog,cmt), class: "btn btn-secondary", :confirm => 'Are you sure?',
                :method => :delete %></p>
            <% end %>
            <%= render "comments/form", :locals => { @blog => @blog } %>
        </div>
      </div>
    </div>
  </article>