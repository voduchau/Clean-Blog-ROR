<%= form_with scope: :blog, :html => { :style => 'background-color:red;' },url: blog_index_path , local: true do |form| %>
<p>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
</p>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>

<p>
  <%= form.submit %>
</p>
<% end %>