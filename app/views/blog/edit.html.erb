<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@blog.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @blog, url: blog_path, method: "patch", local: true, :html => {:multipart => true}) do |form| %>
<div class="form-group">
  <%= form.label :title %><br>
  <%= form.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :body %><br>
  <%= form.text_area :body, class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :image %><br>
  <%= form.file_field :image %>
</div>
<div class="form-group">
  <%= form.label :remote_image_url , "upload by image URL" %>
  <%= form.text_field :remote_image_url, class: "form-control"  %>
</div>
<p>
  <%= form.submit class: "btn btn-primary" %>
</p>

<% end %>